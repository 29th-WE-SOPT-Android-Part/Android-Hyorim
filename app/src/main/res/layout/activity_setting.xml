<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="autoLogin"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.setting.SettingActivity">

        <Toolbar
            android:id="@+id/tb_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:title="@string/setting"
            android:titleMarginStart="20dp"
            android:titleTextAppearance="@style/HeaderH1"
            android:titleTextColor="@color/black_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_grey_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line_gray"
            app:layout_constraintTop_toBottomOf="@id/tb_setting" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fcv_setting"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_grey_line" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>